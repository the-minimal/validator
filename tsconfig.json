{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "WebWorker"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@validators/*": [
        "validators/*"
      ],
      "@constants": [
        "constants.ts"
      ],
      "@error": [
        "error.ts"
      ]
    }
  },
  "include": ["src", "examples"],
  "exclude": ["node_modules"]
}
