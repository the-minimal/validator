{
  "compileroptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "webworker"],
    "moduleresolution": "node",
    "forceconsistentcasinginfilenames": true,
    "esmoduleinterop": true,
    "isolatedmodules": true,
    "strict": true,
    "outdir": "./build"
  },
  "include": ["src", "examples"],
  "exclude": ["node_modules"]
}
