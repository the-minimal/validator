{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "WebWorker"],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@assertions/*": [
        "assertions/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@types": [
        "types.ts"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
