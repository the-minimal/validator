{
  "name": "@the-minimal/validator",
  "type": "module",
  "version": "0.0.2",
  "license": "MIT",
  "author": "Miroslav Vršecký <yamiteru@icloud.com>",
  "description": "Minimal validation library in TypeScript",
  "source": "src/index.ts",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.map",
    "dist/*.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/the-minimal/validator.git",
    "directory": "src"
  },
  "keywords": [
    "data-validation",
    "data-validator",
    "validation",
    "validator",
    "javascript",
    "typescript"
  ],
  "homepage": "https://github.com/the-minimal/validator",
  "bugs": {
    "url": "https://github.com/the-minimal/validator/issues"
  },
  "scripts": {
    "prepublishOnly": "bun run check && bun run build && bun run test",
    "release": "release-it",
    "build": "bun run build:clean && bun run build:code && bun run build:types && bun run build:stats",
    "build:code": "bun run build.ts",
    "build:types": "tsup",
    "build:stats": "bun run stats.ts",
    "build:clean": "rm -rf build",
    "test": "bun test --coverage ./src/**/test.ts",
    "check": "bunx @biomejs/biome check --apply ./"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@types/bun": "latest",
    "release-it": "17.2.0",
    "tsup": "8.0.2"
  },
  "peerDependencies": {
    "typescript": "5.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
